<div class="row" style="padding-bottom: 15px">
<h3>Концерты</h3>
<% if current_user.promoter? %>
	<div class="large-12 columns">
		<h3><%= link_to "Добавить концерт", action: "new" %></h3>
	</div>
<% end %>

<% @concerts.each do |concert| %>
    <% next if current_user.seller? && concert.status != Concert::MODERATED %>
	<div class="large-2 columns">
	   <%= image_tag concert.poster.url, width: '100' %>
	</div>

	<div class="large-10 columns">
        <h3><%= concert.band %> <b><%= concert.date %> <small><%= User.find(concert.user_id).email %></small></h3>
        <h4><%= Hall.find(concert.hall_id).name %></h4>
        <p><i>Цены: <%= concert.prices.join(', ') %></i></p>

        <% if current_user.seller? && concert.status == Concert::MODERATED %>
            <%= link_to 'Продать билет', new_ticket_path(:concert => concert.id) %><br>
        <% end %>

        <% if current_user.promoter? || current_user.admin? %>
            <%= button_to 'Удалить концерт', concert_path(concert.id), method: :delete, :class => 'button left small', data: {confirm: "Вы уверены?"} %><br>
        <% end %>

        <% if current_user.admin? && concert.status != Concert::MODERATED %>
            <%= button_to "Отмодерирован", {
              :action => 'set_moderated', :id => concert.id }, {:method => :post, :class => 'button left small'} %>
        <% end %>
    </div>
    <hr>
<% end %>